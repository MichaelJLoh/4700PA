ny = 10; %row
nx = 5; %col
T = zeros(ny,nx);
time = 100;
%BCs
T(:,1) = 1;
T(:,ny) = 0;
T(1,:) = T(1,:);
T(nx, :) = T(nx-1,:);

for t = 1:time

    for i = 2:(ny-1)
        for k = 2:(nx-1)
            T(i,k) = (T(i+1,k) + T(i-1,k) + T(i,k+1) + T(i,k-1))/4;
        end
    end
    
    T(1,:) = T(2,:);
    T()

end
